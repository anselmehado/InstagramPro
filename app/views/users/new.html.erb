 <%= form_with(model: @user, local: true) do |f| %>

  <table>
    <tr>
      <td> <%= f.label :name %></td>
      <td> <%= f.text_field :name %></td>
    </tr>
    <tr>
      <td> <%= f.label :email %></td>
      <td>
       <%= f.email_field :email %></td>
    </tr>
    <tr>
      <td> <%= f.label :password %></td>
      <td> <%= f.password_field :password %></td>
    </tr>
    <tr>
      <td> <%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td>  <%= form.label :image %></td>
      <td>  <%= image_tag(@user.avatar_user.url) if @user.avatar_user && @user.avatar_user.url %></td>
      <td>  <%= form.file_field :avatar_user %><%= form.hidden_field :avatar_user_cache %></td>
    </tr>
  </table>



